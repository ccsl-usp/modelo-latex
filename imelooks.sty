      \addtocontents{toc}{{\large\vspace{0pt plus 2\baselineskip minus 0pt}}}%
      \addtocontents{toc}{\protect\pagebreak[2]}%
      \addtocontents{toc}{\vspace{.8\baselineskip}}%
